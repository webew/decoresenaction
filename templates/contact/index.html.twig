{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<!-- ======= Contact Us Section ======= -->
	<section id="contact" class="contact">
		<div class="container">

			<div class="section-title">
				<h2>NOUS CONTACTER</h2>
			</div>

			<div class="row">


				<div class="col-lg-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
					<div class="info-box">
						<i class="bx bx-envelope"></i>
						<h3 class="formulaire">NOTRE EMAIL</h3>
						<p>decoresenaction@gmail.com</p>
					</div>
				</div>

				<div class="col-lg-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="200">
					<div class="info-box ">
						<i class="bx bx-phone-call"></i>
						<h3 class="formulaire">NOTRE NUMERO</h3>
						<p>06 84 07 69 12<br>06 07 53 43 86</p>
					</div>
				</div>

				<div class="col-lg-12" data-aos="fade-up" data-aos-delay="300">
					{{form_start(form, {'attr': {'class': 'php-email-form'}})}}

					<div class="form-row">
						<div class="col-lg-6 form-group">
							{{form_label(form.nom, 'NOM', {'label_attr': {'class': 'formulaire'}})}}
							{{form_widget(form.nom, {'attr': {'class': 'form-control'}})}}
							{# <div class="validate"></div> #}
						</div>

						<div class="col-lg-6 form-group">
							{{form_label(form.email, 'EMAIL', {'label_attr': {'class': 'formulaire'}})}}
							{{form_widget(form.email, {'attr': {'class': 'form-control'}})}}
							{# <div class="validate"></div> #}
						</div>
					</div>
					<div class="form-group">
						{{form_label(form.message, 'MESSAGE', {'label_attr': {'class': 'formulaire'}})}}
						{{form_widget(form.message, {'attr': {'class': 'form-control'}})}}
						{# <div class="validate"></div> #}
					</div>

					<div class="text-center">
						<button type="submit">Envoyer</button>
					</div>

					{{form_end(form)}}
				</div>
			</div>

		</div>
	</section>
	<!-- End Contact Us Section -->
{% endblock %}
